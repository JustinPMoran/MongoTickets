<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="183dp"
        android:layout_height="222dp"
        app:srcCompat="@drawable/transparent_mongoticketlogo"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="-49dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="M O N G O T I C K E T S"
        android:textColor="#65D107"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="114dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="474dp"
        android:layout_height="36dp"
        android:text="__________________________________________________________________"
        android:textColor="#779CFF24"
        tools:layout_editor_absoluteX="-57dp"
        tools:layout_editor_absoluteY="149dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_black"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="192dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress3"
        android:layout_width="284dp"
        android:layout_height="67dp"
        android:background="@drawable/text_background"
        android:ems="10"
        android:fontFamily="@font/asap_medium"
        android:hint="ENTER PASSWORD"
        android:inputType="textEmailAddress"
        android:padding="10sp"
        android:textColor="#2C5B03"
        android:textColorHint="#2C5B03"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="375dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="284dp"
        android:layout_height="67dp"
        android:background="@drawable/text_background"
        android:ems="10"
        android:fontFamily="@font/asap_medium"
        android:hint="ENTER EMAIL"
        android:inputType="textEmailAddress"
        android:padding="10sp"
        android:textColor="#2C5B03"
        android:textColorHint="#2C5B03"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="264dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="277dp"
        android:layout_height="42dp"
        android:background="@drawable/text_background_white"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/archivo_black"
        android:text="LOGIN!"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="491dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/text_background_white_outline"
        android:padding="1dp"
        android:text="Don't have an account? SIGN UP!"
        android:textSize="10sp"
        app:backgroundTint="@null"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="571dp" />

</androidx.constraintlayout.widget.ConstraintLayout>