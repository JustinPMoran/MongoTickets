<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#191E1F"
    android:layout_marginTop="10dp"
    tools:context=".ui.dashboard.DashboardFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_marginTop="10dp"
        android:layout_height="90dp"
        app:cardCornerRadius="45dp"
        android:layout_margin="5dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/image_movie_tickets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/ic_launcher_background"
            android:contentDescription="Movie Tickets Image" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#149E9E"
        android:text="android@iastate.edu" />

    <!-- Heading for Upcoming Events -->
    <TextView
        android:id="@+id/upcoming_events_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Upcoming Events"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#15181A"
        android:background="@drawable/heading_bg"
        android:layout_marginTop="32dp"
        android:textAlignment="center" />

    <!-- Image section -->
    <FrameLayout
        android:id="@+id/image_frame"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="-20dp">

        <ImageView
            android:id="@+id/image_concert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/events"
            android:contentDescription="Event Image" />

    </FrameLayout>

    <!-- Heading for Listed Tickets -->
    <TextView
        android:id="@+id/listed_tickets_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Listed Tickets"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#15181A"
        android:background="@drawable/heading_bg"
        android:layout_marginTop="32dp"
        android:textAlignment="center" />

    <!-- Similar Image section for Listed Tickets (Placeholder for now) -->
    <FrameLayout
        android:id="@+id/image_frame_listed"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="-20dp">

        <ImageView
            android:id="@+id/image_listed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/tickets"
            android:contentDescription="Listed Event Image" />

    </FrameLayout>

</LinearLayout>
